<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/relative_layout_pack_activity"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        app:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                app:elevation="2dp"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                style="@style/ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_below="@id/appBarLayout"
        android:id="@+id/swipe_refreshl_pack_activity"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/adView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_layout_page_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/error_page" />
            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/image_view_empty"
                app:srcCompat="@drawable/bg_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <android.support.v7.widget.RecyclerView
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:visibility="visible"
                android:id="@+id/recycle_view_pack_activity"
                android:layout_centerInParent="true"
                android:layout_height="fill_parent"
                android:layout_width="match_parent"/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relative_layout_load_more"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/loading_bg"
        android:layout_marginBottom="60dp"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <com.leo.simplearcloader.SimpleArcLoader
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:arc_colors="@array/colors_load"
            app:arc_style="simple_arc"
            app:arc_speed="medium"
            app:arc_margin="3dp">

        </com.leo.simplearcloader.SimpleArcLoader>
    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:visibility="gone"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/ad_unit_id_banner"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>