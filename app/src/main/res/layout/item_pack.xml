<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardMaxElevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/image_view_item_pack_image_1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            app:cardMaxElevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/image_view_item_pack_image_2"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            app:cardMaxElevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/image_view_item_pack_image_3"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/text_view_item_pack_title"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text="-- Galaxy -- "
            android:background="@drawable/bg_pack"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_width="120dp"
            android:layout_height="120dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>